<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:padding="0dp"
    android:weightSum="1"
    android:orientation="vertical"
    android:gravity="bottom">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_grey_300"
        android:gravity="bottom|right"
        android:id="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="false"
        android:weightSum="1"
        android:layout_above="@+id/gridLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_input"
            android:autoText="false"
            android:textSize="36sp"
            android:textStyle="normal"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp" />

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="5"
        android:useDefaultMargins="false"
        android:id="@+id/gridLayout2"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_percent"
            android:id="@+id/bttn_percent"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="PercentClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_ac"
            android:id="@+id/bttn_ac"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="ACClicked" />

        <Button
            style="@style/Base.TextAppearance.AppCompat.Widget.Button"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_div"
            android:id="@+id/bttn_div"
            android:layout_row="0"
            android:layout_column="3"
            android:onClick="DivClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_7"
            android:id="@+id/bttn_7"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:textSize="@dimen/abc_text_size_large_material"
            android:onClick="SymbClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_mul"
            android:id="@+id/bttn_mul"
            android:layout_row="1"
            android:layout_column="3"
            android:onClick="MulClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_4"
            android:id="@+id/bttn_4"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:textSize="@dimen/abc_text_size_large_material"
            android:onClick="SymbClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_5"
            android:id="@+id/bttn_5"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:textSize="@dimen/abc_text_size_large_material"
            android:onClick="SymbClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_6"
            android:id="@+id/bttn_6"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:textSize="@dimen/abc_text_size_large_material"
            android:onClick="SymbClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_minus"
            android:id="@+id/bttn_minus"
            android:layout_row="2"
            android:layout_column="3"
            android:onClick="MinusClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_1"
            android:id="@+id/bttn_1"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:textSize="@dimen/abc_text_size_large_material"
            android:onClick="SymbClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_2"
            android:id="@+id/bttn_2"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:textSize="@dimen/abc_text_size_large_material"
            android:onClick="SymbClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_3"
            android:id="@+id/bttn_3"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:textSize="@dimen/abc_text_size_large_material"
            android:onClick="SymbClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_plus"
            android:id="@+id/bttn_plus"
            android:layout_row="3"
            android:layout_column="3"
            android:onClick="PlusClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_comma"
            android:id="@+id/bttn_comma"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="@dimen/abc_text_size_large_material"
            android:onClick="CommaClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_sign"
            android:id="@+id/bttn_sign"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="SignChangeClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_8"
            android:id="@+id/bttn_8"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:textSize="@dimen/abc_text_size_large_material"
            android:onClick="SymbClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_0"
            android:id="@+id/bttn_0"
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="@dimen/abc_text_size_large_material"
            android:onClick="SymbClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_9"
            android:id="@+id/bttn_9"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:textSize="@dimen/abc_text_size_large_material"
            android:onClick="SymbClicked" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/_equal"
            android:id="@+id/bttn_equal"
            android:layout_row="4"
            android:layout_column="2"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_columnSpan="2"
            android:textStyle="bold"
            android:layout_gravity="fill_horizontal"
            android:onClick="EqualClicked"
            android:nestedScrollingEnabled="false" />
    </GridLayout>

</RelativeLayout>
