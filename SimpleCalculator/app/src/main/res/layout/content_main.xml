<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/screen"
        android:layout_alignParentStart="true"
        android:gravity="right"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/button_clear"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/screen"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POW"
        android:id="@+id/button_pow"
        android:layout_alignBottom="@+id/button_clear"
        android:layout_toEndOf="@+id/button_clear" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:id="@+id/button_mod"
        android:layout_alignBottom="@+id/button_pow"
        android:layout_toEndOf="@+id/button_pow" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEL"
        android:id="@+id/button_del"
        android:layout_alignBottom="@+id/button_mod"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button_seven"
        android:layout_below="@+id/button_clear"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button_eight"
        android:layout_alignBottom="@+id/button_seven"
        android:layout_toStartOf="@+id/button_mod" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button_nine"
        android:layout_toStartOf="@+id/button_del"
        android:layout_alignBottom="@+id/button_eight" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/button_div"
        android:layout_alignBottom="@+id/button_nine"
        android:layout_toEndOf="@+id/button_nine"
        android:textColor="#7f603a"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button_four"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button_seven"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button_five"
        android:layout_alignBottom="@+id/button_four"
        android:layout_toEndOf="@+id/button_four" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button_six"
        android:layout_alignBottom="@+id/button_five"
        android:layout_toEndOf="@+id/button_five" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/button_mul"
        android:textColor="#7f603a"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/button_six"
        android:layout_toEndOf="@+id/button_six" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button_one"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button_four"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button_two"
        android:layout_alignBottom="@+id/button_one"
        android:layout_toEndOf="@+id/button_one" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button_three"
        android:layout_alignBottom="@+id/button_two"
        android:layout_toEndOf="@+id/button_two" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/button_sub"
        android:textColor="#7f603a"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/button_three"
        android:layout_toEndOf="@+id/button_three" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button_zero"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button_one"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/button_dot"
        android:layout_alignBottom="@+id/button_zero"
        android:layout_toEndOf="@+id/button_zero" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/button_equals"
        android:layout_alignBottom="@+id/button_dot"
        android:layout_toEndOf="@+id/button_dot"
        android:textColor="#cb771e"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button_add"
        android:textColor="#7f603a"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/button_equals"
        android:layout_toEndOf="@+id/button_equals" />

</RelativeLayout>
