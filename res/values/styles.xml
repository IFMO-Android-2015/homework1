<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">onClick</item>
        <item name="android:textSize">@dimen/button_font_size</item>
    </style>
    
    <style name="operator" parent="button">
        <item name="android:background">@drawable/operator_button</item>
    </style>
    
    <style name="digit" parent="button">
        <item name="android:background">@drawable/digit_button</item>
    </style>
    
    <style name="clear" parent="button">
        <item name="android:background">@drawable/clear_button</item>
    </style>
    <style name="result" parent="button">
        <item name="android:background">@drawable/result_button</item>
    </style>

</resources>