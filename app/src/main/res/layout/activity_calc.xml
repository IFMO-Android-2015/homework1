<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CalcActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/formulaView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:textAlignment="textEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:layout_below="@+id/formulaView"
        android:id="@+id/resultView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="50sp"
        android:textAlignment="textEnd" />

    <TableLayout
        android:id="@+id/buttonTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/resultView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:stretchColumns="*">
        <TableRow android:layout_gravity="center" android:layout_weight="1">
            <Button
                android:text="7"
                android:id="@+id/button7"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
            <Button
                android:text="8"
                android:id="@+id/button8"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
            <Button
                android:text="9"
                android:id="@+id/button9"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
            <Button
                android:text="*"
                android:id="@+id/buttonMul"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
        </TableRow>
        <TableRow android:layout_gravity="center" android:layout_weight="1">
            <Button
                android:text="4"
                android:id="@+id/button4"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
            <Button
                android:text="5"
                android:id="@+id/button5"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
            <Button
                android:text="6"
                android:id="@+id/button6"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
            <Button
                android:text="/"
                android:id="@+id/buttonDiv"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
        </TableRow>
        <TableRow android:layout_gravity="center" android:layout_weight="1">
            <Button
                android:text="1"
                android:id="@+id/button1"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
            <Button
                android:text="2"
                android:id="@+id/button2"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
            <Button
                android:text="3"
                android:id="@+id/button3"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
            <Button
                android:text="-"
                android:id="@+id/buttonMinus"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
        </TableRow>
        <TableRow android:layout_gravity="center" android:layout_weight="1">
            <Button
                android:text="0"
                android:id="@+id/button0"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
            <Button
                android:text="."
                android:id="@+id/buttonPoint"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
            <Button
                android:text="+"
                android:id="@+id/buttonPlus"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent"/>
        </TableRow>
        <TableRow android:layout_gravity="center" android:layout_weight="1">
            <Button
                android:text="CE"
                android:id="@+id/buttonClearEverything"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
            <Button
                android:text="C"
                android:id="@+id/buttonClear"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"/>
            <Button
                android:text="="
                android:id="@+id/buttonEquals"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
