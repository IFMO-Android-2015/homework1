<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CalcActivity"
    android:orientation="vertical"
    android:gravity="end"
    >


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_weight="0.5">
        <com.ifmo.kurkin.calculator.AutoResizeTextView
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:id="@+id/display"
            android:textSize="50sp"
             />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/clear"
            android:text="AC"
            android:onClick="onClick" />
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/backspase"
            android:onClick="onClick"
            android:text="C"/>
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/minus"
            android:onClick="onClick"
            android:text="Â±" />
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="/"
            android:id="@+id/div"
            android:onClick="onClick" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="7"
            android:id="@+id/seven"
            android:onClick="onClick" />
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="8"
            android:id="@+id/eight"
            android:onClick="onClick" />
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="9"
            android:id="@+id/nine"
            android:onClick="onClick" />
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="*"
            android:id="@+id/mul"
            android:onClick="onClick" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="4"
            android:id="@+id/four"
            android:onClick="onClick" />
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="5"
            android:id="@+id/five"
            android:onClick="onClick" />
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="6"
            android:id="@+id/six"
            android:onClick="onClick" />
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="-"
            android:id="@+id/sub"
            android:onClick="onClick" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/one"
            android:onClick="onClick" />
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/two"
            android:onClick="onClick" />
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3"
            android:id="@+id/three"
            android:onClick="onClick" />
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="+"
            android:id="@+id/add"
            android:onClick="onClick" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/zero"
            android:onClick="onClick" />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="."
            android:id="@+id/point"
            android:onClick="onClick" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="="
            android:id="@+id/equals"
            android:onClick="onClick" />
    </TableRow>

</LinearLayout>
