<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/Screen"
        android:id="@+id/screen"
        android:text="0.0"
        android:gravity="right"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            style="@style/DigitButton"
            android:text="1"/>
        <Button
            style="@style/DigitButton"
            android:text="2"/>
        <Button
            style="@style/DigitButton"
            android:text="3"/>
        <Button
            style="@style/OperationButton"
            android:text="+"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            style="@style/DigitButton"
            android:text="4"/>
        <Button
            style="@style/DigitButton"
            android:text="5"/>
        <Button
            style="@style/DigitButton"
            android:text="6"/>
        <Button
            style="@style/OperationButton"
            android:text="-"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            style="@style/DigitButton"
            android:text="7"/>
        <Button
            style="@style/DigitButton"
            android:text="8"/>
        <Button
            style="@style/DigitButton"
            android:text="9"/>
        <Button
            style="@style/OperationButton"
            android:text="*"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            style="@style/DigitButton"
            android:text="."/>
        <Button
            style="@style/DigitButton"
            android:text="0"/>

        <Button
            style="@style/DeleteButton"
            android:longClickable="true"
            android:id="@+id/delete_button"
            android:text="del"/>

        <Button
            style="@style/EqualsButton"
            android:text="="/>
        <Button
            style="@style/OperationButton"
            android:text="/"/>
    </LinearLayout>



</LinearLayout>
