<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#999"
    android:baselineAligned="false">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="0"
        android:id="@+id/textView"
        android:layout_weight="3"
        android:textSize="30dp"
        android:textAlignment="gravity"
        android:gravity="bottom|center|right"
        android:background="#ffffff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:visibility="visible"
        android:background="#ff9100">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="C"
            android:id="@+id/C"
            android:layout_weight="1"
            android:background="#ff9100"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="DEL"
            android:id="@+id/DEL"
            android:layout_weight="1"
            android:background="#ff9100"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="+"
            android:id="@+id/ADD"
            android:layout_weight="1"
            android:background="#ff9100"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="-"
            android:id="@+id/SUB"
            android:layout_weight="1"
            android:background="#ff9100"
            android:onClick="buttonClick" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="7"
            android:id="@+id/b7"
            android:layout_weight="1"
            android:background="#c0c0c0"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="8"
            android:id="@+id/b8"
            android:layout_weight="1"
            android:background="#c0c0c0"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="9"
            android:id="@+id/b9"
            android:layout_weight="1"
            android:background="#c0c0c0"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="*"
            android:id="@+id/MUL"
            android:layout_weight="1"
            android:background="#ff9100"
            android:onClick="buttonClick" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="4"
            android:id="@+id/b4"
            android:layout_weight="1"
            android:background="#c0c0c0"
            android:nestedScrollingEnabled="false"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="5"
            android:id="@+id/b5"
            android:layout_weight="1"
            android:background="#c0c0c0"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="6"
            android:id="@+id/b6"
            android:layout_weight="1"
            android:background="#c0c0c0"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="/"
            android:id="@+id/DIV"
            android:layout_weight="1"
            android:background="#ff9100"
            android:onClick="buttonClick" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="1"
            android:id="@+id/b1"
            android:layout_weight="1"
            android:background="#c0c0c0"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="2"
            android:id="@+id/b2"
            android:layout_weight="1"
            android:background="#c0c0c0"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="3"
            android:id="@+id/b3"
            android:layout_weight="1"
            android:background="#c0c0c0"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="."
            android:id="@+id/POINT"
            android:layout_weight="1"
            android:background="#ff9100"
            android:onClick="buttonClick" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="0"
            android:id="@+id/ZERO"
            android:layout_weight="3"
            android:background="#c0c0c0"
            android:onClick="buttonClick"
            android:nestedScrollingEnabled="false" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="="
            android:id="@+id/EQUAL"
            android:layout_weight="1"
            android:background="#ff9100"
            android:onClick="buttonClick" />
    </LinearLayout>
</LinearLayout>
