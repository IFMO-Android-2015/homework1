<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:touchscreenBlocksFocus="false">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowWeight="2"
        android:background="#424242">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/screen"
            android:textSize="60sp"
            android:gravity="bottom|end"
            android:layout_gravity="bottom|right"
            android:textColor="#ffffff" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_rowWeight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="C"
            android:id="@+id/button"
            android:textSize="30sp"
            style="@style/Widget.AppCompat.ButtonBar"
            android:onClick="onClearClick"
            android:background="#b41756"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="del"
            android:id="@+id/button2"
            android:textSize="30sp"
            android:onClick="onDeleteClick"
            android:background="#b41756"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="±"
            android:id="@+id/button3"
            android:textSize="30sp"
            android:onClick="onChangeSignClick"
            android:background="#426a44"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="÷"
            android:id="@+id/button4"
            android:textSize="30sp"
            android:onClick="onOperationClick"
            android:background="#426a44"
            android:layout_weight="1"
            android:textColor="#ffffff" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_rowWeight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7"
            android:id="@+id/button5"
            android:textSize="30sp"
            style="@style/Widget.AppCompat.ButtonBar"
            android:onClick="onDigitClick"
            android:background="#39ad3e"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8"
            android:id="@+id/button6"
            android:textSize="30sp"
            android:onClick="onDigitClick"
            android:background="#39ad3e"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9"
            android:id="@+id/button7"
            android:textSize="30sp"
            android:onClick="onDigitClick"
            android:background="#39ad3e"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="×"
            android:id="@+id/button8"
            android:textSize="30sp"
            android:onClick="onOperationClick"
            android:background="#426a44"
            android:layout_weight="1"
            android:textColor="#ffffff" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_rowWeight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4"
            android:id="@+id/button9"
            android:textSize="30sp"
            style="@style/Widget.AppCompat.ButtonBar"
            android:onClick="onDigitClick"
            android:background="#39ad3e"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:id="@+id/button10"
            android:textSize="30sp"
            android:onClick="onDigitClick"
            android:background="#39ad3e"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:id="@+id/button11"
            android:textSize="30sp"
            android:onClick="onDigitClick"
            android:background="#39ad3e"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:id="@+id/button12"
            android:textSize="30sp"
            android:onClick="onOperationClick"
            android:background="#426a44"
            android:layout_weight="1"
            android:textColor="#ffffff" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_rowWeight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/button13"
            android:textSize="30sp"
            style="@style/Widget.AppCompat.ButtonBar"
            android:onClick="onDigitClick"
            android:background="#39ad3e"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/button14"
            android:textSize="30sp"
            android:onClick="onDigitClick"
            android:background="#39ad3e"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:id="@+id/button15"
            android:textSize="30sp"
            android:onClick="onDigitClick"
            android:background="#39ad3e"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+"
            android:id="@+id/button16"
            android:textSize="30sp"
            android:onClick="onOperationClick"
            android:background="#426a44"
            android:layout_weight="1"
            android:textColor="#ffffff" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_rowWeight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/button17"
            android:textSize="30sp"
            style="@style/Widget.AppCompat.ButtonBar"
            android:onClick="onDigitClick"
            android:background="#39ad3e"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="."
            android:id="@+id/button18"
            android:textSize="30sp"
            android:onClick="onDotClick"
            android:background="#39ad3e"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="="
            android:id="@+id/button19"
            android:textSize="30sp"
            android:onClick="onResultClick"
            android:background="#3952ad"
            android:layout_weight="3.67"
            android:textColor="#ffffff" />
    </TableRow>
</GridLayout>
