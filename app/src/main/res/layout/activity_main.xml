<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:id="@+id/scroll">
        <TextView
            android:id="@+id/calc_res"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="10dp"
            android:text="0"
            android:textSize="40sp"
            android:layout_marginEnd="10dp"/>
    </ScrollView>
<TableLayout
    android:layout_height="0dp"
    android:layout_weight="5"
    android:layout_width="match_parent"
    android:stretchColumns="*"
    android:orientation="vertical">
    <TableRow
        android:background="@color/opButtonColor"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        style="?android:buttonBarStyle">
        <Button
            style="?android:buttonBarButtonStyle"
            android:onClick="onClearButtonClick"
            android:id="@+id/button_clear"
            android:layout_height="match_parent"
            android:text="@string/button_clear"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
        <Button
            style="?android:buttonBarButtonStyle"
            android:onClick="onOperationButtonClick"
            android:id="@+id/button_plus_minus"
            android:layout_height="match_parent"
            android:text="@string/button_plus_minus"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
        <Button
            style="?android:buttonBarButtonStyle"
            android:onClick="onOperationButtonClick"
            android:id="@+id/button_percent"
            android:layout_height="match_parent"
            android:text="@string/button_percent"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
        <Button
            style="?android:buttonBarButtonStyle"
            android:onClick="onOperationButtonClick"
            android:id="@+id/button_div"
            android:layout_height="match_parent"
            android:text="@string/button_div"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        style="?android:buttonBarStyle">
        <Button
            style="?android:buttonBarButtonStyle"
            android:onClick="onDigitButtonClick"
            android:id="@+id/button_7"
            android:layout_height="match_parent"
            android:text="@string/button_7"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
        <Button
            style="?android:buttonBarButtonStyle"
            android:onClick="onDigitButtonClick"
            android:id="@+id/button_8"
            android:layout_height="match_parent"
            android:text="@string/button_8"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
        <Button
            style="?android:buttonBarButtonStyle"
            android:onClick="onDigitButtonClick"
            android:id="@+id/button_9"
            android:layout_height="match_parent"
            android:text="@string/button_9"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
        <Button
            style="?android:buttonBarButtonStyle"
            android:background="@color/opButtonColor"
            android:onClick="onOperationButtonClick"
            android:id="@+id/button_mul"
            android:layout_height="match_parent"
            android:text="@string/button_mul"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        style="?android:buttonBarStyle">
        <Button
            style="?android:buttonBarButtonStyle"
            android:onClick="onDigitButtonClick"
            android:id="@+id/button_4"
            android:layout_height="match_parent"
            android:text="@string/button_4"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
        <Button
            style="?android:buttonBarButtonStyle"
            android:onClick="onDigitButtonClick"
            android:id="@+id/button_5"
            android:layout_height="match_parent"
            android:text="@string/button_5"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
        <Button
            style="?android:buttonBarButtonStyle"
            android:onClick="onDigitButtonClick"
            android:id="@+id/button_6"
            android:layout_height="match_parent"
            android:text="@string/button_6"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp" />
        <Button
            style="?android:buttonBarButtonStyle"
            android:background="@color/opButtonColor"
            android:onClick="onOperationButtonClick"
            android:id="@+id/button_minus"
            android:layout_height="match_parent"
            android:text="@string/button_minus"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        style="?android:buttonBarStyle">
        <Button
            style="?android:buttonBarButtonStyle"
            android:onClick="onDigitButtonClick"
            android:id="@+id/button_1"
            android:layout_height="match_parent"
            android:text="@string/button_1"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
        <Button
            style="?android:buttonBarButtonStyle"
            android:onClick="onDigitButtonClick"
            android:id="@+id/button_2"
            android:layout_height="match_parent"
            android:text="@string/button_2"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
        <Button
            style="?android:buttonBarButtonStyle"
            android:onClick="onDigitButtonClick"
            android:id="@+id/button_3"
            android:layout_height="match_parent"
            android:text="@string/button_3"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
        <Button
            style="?android:buttonBarButtonStyle"
            android:background="@color/opButtonColor"
            android:onClick="onOperationButtonClick"
            android:id="@+id/button_plus"
            android:layout_height="match_parent"
            android:text="@string/button_plus"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        style="?android:buttonBarStyle">
        <Button
            style="?android:buttonBarButtonStyle"
            android:onClick="onDigitButtonClick"
            android:id="@+id/button_0"
            android:layout_height="match_parent"
            android:text="@string/button_0"
            android:layout_span="2"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
        <Button
            style="?android:buttonBarButtonStyle"
            android:onClick="onDotButtonClick"
            android:id="@+id/button_dot"
            android:layout_height="match_parent"
            android:text="@string/button_dot"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
        <Button
            style="?android:buttonBarButtonStyle"
            android:background="@color/opButtonColor"
            android:onClick="onOperationButtonClick"
            android:id="@+id/button_eq"
            android:layout_height="match_parent"
            android:text="@string/button_eq"
            android:textSize="30sp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>
    </TableRow>
</TableLayout>
</LinearLayout>
