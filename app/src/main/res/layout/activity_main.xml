<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/operations"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_gravity="fill_horizontal"
        android:background="@android:color/transparent"
        android:gravity="end"
        android:inputType="none"
        android:maxLines="1"
        android:text="@string/button_zero"
        android:textSize="50sp"
        android:focusable="false"
        android:cursorVisible="false"
        android:maxLength="9" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/operations">

        <TableRow android:layout_weight="0.2">

            <Button
                android:id="@+id/buttonClear"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_clear"
                android:textSize="23sp" />

            <Button
                android:id="@+id/buttonChangeSgn"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_change_sign"
                android:textSize="23sp" />
        </TableRow>

        <TableRow android:layout_weight="0.2">

            <Button
                android:id="@+id/buttonNum7"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_seven"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonNum8"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_eight"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonNum9"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_nine"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonDivide"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_divide"
                android:textSize="30sp" />
        </TableRow>

        <TableRow android:layout_weight="0.2">

            <Button
                android:id="@+id/buttonNum4"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_four"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonNum5"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_five"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonNum6"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_six"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonMultiply"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_multiply"
                android:textSize="30sp" />
        </TableRow>

        <TableRow android:layout_weight="0.2">

            <Button
                android:id="@+id/buttonNum1"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_one"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonNum2"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_two"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonNum3"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_three"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonSubtract"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_subtract"
                android:textSize="30sp" />
        </TableRow>

        <TableRow android:layout_weight="0.2">

            <Button
                android:id="@+id/buttonComma"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_comma"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonNum0"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_zero"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonEquals"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_equal"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonAdd"
                style="?android:buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/button_add"
                android:textSize="30sp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
