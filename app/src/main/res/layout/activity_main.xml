<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text=""
            android:id="@+id/textView1"
            android:textSize="24sp"
            android:textIsSelectable="true"
            android:textStyle="normal"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text=""
            android:id="@+id/textView2"
            android:textSize="24sp"
            android:textIsSelectable="true"
            android:textStyle="normal"
            android:singleLine="true"
            />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1"
            android:id="@+id/but_1"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="numberClick"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="2"
            android:id="@+id/but_2"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="numberClick"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="3"
            android:id="@+id/but_3"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="numberClick"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="4"
            android:id="@+id/but_4"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="numberClick"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="5"
            android:id="@+id/but_5"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="numberClick"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="6"
            android:id="@+id/but_6"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="numberClick"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="7"
            android:id="@+id/but_7"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="numberClick"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="8"
            android:id="@+id/but_8"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="numberClick"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="9"
            android:id="@+id/but_9"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="numberClick"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="."
            android:id="@+id/but_point"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="numberClick"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="0"
            android:id="@+id/but_0"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="numberClick"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Â±"
            android:id="@+id/but_sign"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="signChangeClick"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:id="@+id/but_plus"
            android:layout_row="0"
            android:layout_column="3"
            android:onClick="plusClick"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"
            android:id="@+id/but_minus"
            android:layout_row="1"
            android:layout_column="3"
            android:onClick="minusClick"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="*"
            android:id="@+id/but_mul"
            android:layout_row="2"
            android:layout_column="3"
            android:onClick="mulClick"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="/"
            android:id="@+id/but_div"
            android:layout_row="3"
            android:layout_column="3"
            android:onClick="divClick"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Eval"
            android:id="@+id/but_calc"
            android:layout_row="4"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:onClick="evalClick"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Clear"
            android:id="@+id/but_clear"
            android:layout_row="4"
            android:layout_columnSpan="2"
            android:layout_column="2"
            android:onClick="clearClick"/>
    </GridLayout>
</RelativeLayout>
