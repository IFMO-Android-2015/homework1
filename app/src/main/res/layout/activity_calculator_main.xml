<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CalculatorMainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textSize="42sp"
        android:text="0"
        android:id="@+id/resultsTextView"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:lines="1"
        android:layout_weight="1" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/ACSymbol"
                android:id="@+id/ACButton"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/changeSymbol"
                android:id="@+id/changeSignButton"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/percentageSymbol"
                android:id="@+id/percentageButton"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/divideSymbol"
                android:id="@+id/divideButton"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/num7Symbol"
                android:id="@+id/num7Button"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/num8Symbol"
                android:id="@+id/num8Button"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/num9Symbol"
                android:id="@+id/num9Button"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/multiplicationSymbol"
                android:id="@+id/multiplicationButton"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/num4Symbol"
                android:layout_weight="1"
                android:id="@+id/num4Button" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/num5Symbol"
                android:id="@+id/num5Button"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/num6Symbol"
                android:id="@+id/num6Button"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/subtractSymbol"
                android:id="@+id/subtractButton"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/num1Symbol"
                android:layout_weight="1"
                android:id="@+id/num1Button" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/num2Symbol"
                android:id="@+id/num2Button"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/num3Symbol"
                android:id="@+id/num3Button"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/addSymbol"
                android:id="@+id/addButton"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/dotSymbol"
                android:id="@+id/dotButton"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/num0Symbol"
                android:id="@+id/num0Button"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/evaluateSymbol"
                android:id="@+id/evaluateButton"
                android:layout_weight="1" />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/enterSymbol"
                android:id="@+id/enterButton"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>

</LinearLayout>
