<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fbceb1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textOut"
        android:gravity="bottom|right"
        android:textSize="40dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="e"
            android:id="@+id/exp"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="pi"
            android:id="@+id/pi"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="c"
            android:id="@+id/clear"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="R"
            android:id="@+id/reset"
            android:layout_column="3"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40sp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7"
            android:id="@+id/seven"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8"
            android:id="@+id/eight"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9"
            android:id="@+id/nine"
            android:layout_column="2"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="/"
            android:id="@+id/divide"
            android:layout_column="3"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4"
            android:id="@+id/four"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:id="@+id/five"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:id="@+id/six"
            android:layout_column="2"
            android:layout_weight="1"
            android:background="#eb8069"
            android:typeface="normal"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="*"
            android:id="@+id/multiply"
            android:layout_column="3"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/one"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/two"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:id="@+id/three"
            android:layout_column="2"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:id="@+id/subtract"
            android:layout_column="3"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/zero"
            android:layout_column="0"
            android:layout_weight="1"
            android:layout_span="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="."
            android:id="@+id/dot"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="="
            android:id="@+id/equal"
            android:layout_column="2"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+"
            android:id="@+id/plus"
            android:layout_column="3"
            android:layout_weight="1"
            android:background="#eb8069"
            android:textSize="40dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_margin="7sp" />
    </TableRow>
</TableLayout>
