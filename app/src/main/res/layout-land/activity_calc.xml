<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CalcActivity"
    android:id="@+id/RelativeLayout"
    android:background="#636363">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/exp"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="top"
                android:textIsSelectable="false" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/clear"
                    android:id="@+id/button10"
                    android:layout_weight="1"
                    android:background="#ff6e06"
                    android:layout_margin="2dp"
                    android:onClick="onClearPressed"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/backspace"
                    android:id="@+id/button12"
                    android:layout_weight="1"
                    android:background="#ff6e06"
                    android:layout_margin="2dp"
                    android:onClick="onClearPressed"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/one"
                        android:id="@+id/button1"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:singleLine="false"
                        android:background="#ffffff"
                        android:layout_margin="2dp"
                        android:onClick="onDigitPressed" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/four"
                        android:id="@+id/button4"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:background="#ffffff"
                        android:layout_margin="2dp"
                        android:onClick="onDigitPressed" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/seven"
                        android:id="@+id/button7"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:background="#ffffff"
                        android:layout_margin="2dp"
                        android:onClick="onDigitPressed" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/point"
                        android:id="@+id/point_button"
                        android:layout_weight="1"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:background="#424242"
                        android:layout_margin="2dp"
                        android:onClick="onDigitPressed" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/two"
                        android:id="@+id/button2"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:background="#ffffff"
                        android:layout_margin="2dp"
                        android:onClick="onDigitPressed" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/five"
                        android:id="@+id/button5"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:background="#ffffff"
                        android:layout_margin="2dp"
                        android:onClick="onDigitPressed" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/eight"
                        android:id="@+id/button8"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:background="#ffffff"
                        android:layout_margin="2dp"
                        android:onClick="onDigitPressed" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:id="@+id/button0"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:background="#ffffff"
                        android:layout_margin="2dp"
                        android:onClick="onDigitPressed" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/three"
                        android:id="@+id/button3"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:background="#ffffff"
                        android:layout_margin="2dp"
                        android:onClick="onDigitPressed" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/six"
                        android:id="@+id/button6"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:background="#ffffff"
                        android:layout_margin="2dp"
                        android:onClick="onDigitPressed" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nine"
                        android:id="@+id/button9"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:background="#ffffff"
                        android:layout_margin="2dp"
                        android:onClick="onDigitPressed" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/equals"
                        android:id="@+id/equals_button"
                        android:layout_weight="1"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:layout_margin="2dp"
                        android:background="#ff6d04"
                        android:onClick="onEvaluatePressed" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/divide"
                        android:id="@+id/divide_button"
                        android:layout_weight="1"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:background="#424242"
                        android:layout_margin="2dp"
                        android:onClick="onEvaluatePressed"
                        android:longClickable="false"
                        android:clickable="false" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/multiply"
                        android:id="@+id/multiply_button"
                        android:layout_weight="1"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:background="#424242"
                        android:layout_margin="2dp"
                        android:onClick="onEvaluatePressed"
                        android:clickable="false" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/subtract"
                        android:id="@+id/subtract_button"
                        android:layout_weight="1"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:background="#424242"
                        android:layout_margin="2dp"
                        android:onClick="onEvaluatePressed" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/add"
                        android:id="@+id/add_button"
                        android:layout_weight="1"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:background="#424242"
                        android:layout_margin="2dp"
                        android:onClick="onEvaluatePressed" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
