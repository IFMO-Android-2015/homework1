<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="horizontal"
    android:id="@+id/lo"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.43"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.14">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="0.10"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/total"
            android:layout_weight="0.13" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/operation"
                android:id="@+id/operation"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/expr"
                android:id="@+id/out"
                android:textSize="35sp"
                android:textIsSelectable="true"
                android:layout_alignBaseline="@+id/operation"
                android:layout_alignBottom="@+id/operation"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:layout_weight="0.13">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/seven"
                android:id="@+id/seven"
                android:layout_weight="0.22" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/eight"
                android:id="@+id/eight"
                android:layout_weight="0.22" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/nine"
                android:id="@+id/nine"
                android:layout_weight="0.22" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/add"
                android:id="@+id/add"
                android:layout_weight="0.34" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:layout_weight="0.13">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/four"
                android:id="@+id/four"
                android:layout_weight="0.22" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/five"
                android:id="@+id/five"
                android:layout_weight="0.22" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/six"
                android:id="@+id/six"
                android:layout_weight="0.22" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/substract"
                android:id="@+id/sub"
                android:layout_weight="0.34" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:layout_weight="0.13">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/one"
                android:id="@+id/one"
                android:layout_weight="0.22" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/two"
                android:id="@+id/two"
                android:layout_weight="0.22" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/three"
                android:id="@+id/three"
                android:layout_weight="0.22" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/multiply"
                android:id="@+id/multiply"
                android:layout_weight="0.34" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:layout_weight="0.13">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/point"
                android:id="@+id/point"
                android:layout_weight="0.22" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/zero"
                android:id="@+id/zero"
                android:layout_weight="0.22" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/equals"
                android:id="@+id/equals"
                android:layout_weight="0.22" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/div"
                android:id="@+id/divide"
                android:layout_weight="0.34" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_weight="0.10"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.43"></LinearLayout>

</LinearLayout>
