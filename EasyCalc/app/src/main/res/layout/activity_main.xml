<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView"
        android:freezesText="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:gravity="center|right"
        android:paddingRight="@dimen/text_padding"
        android:textSize="30sp"
        android:textColorHint="@android:color/darker_gray"
        android:hint="@string/hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="AC"
            android:textSize="25sp"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonAllClear"
            android:onClick="onClickOperation"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="+/-"
            android:textSize="@dimen/operation_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonChangeSign"
            android:onClick="onClickOperation"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="MOD"
            android:textSize="@dimen/operation_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonMod"
            android:onClick="onClickOperation"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="/"
            android:textSize="@dimen/operation_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonDivision"
            android:onClick="onClickOperation"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="7"
            android:textSize="@dimen/number_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonSeven"
            android:onClick="onClickDigit"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="8"
            android:textSize="@dimen/number_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonEight"
            android:onClick="onClickDigit"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="9"
            android:textSize="@dimen/number_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonNine"
            android:onClick="onClickDigit"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="*"
            android:textSize="@dimen/operation_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonMultiply"
            android:onClick="onClickOperation"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="4"
            android:textSize="@dimen/number_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonFour"
            android:onClick="onClickDigit"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="5"
            android:textSize="@dimen/number_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonFive"
            android:onClick="onClickDigit"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="6"
            android:textSize="@dimen/number_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonSix"
            android:onClick="onClickDigit"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="â€”"
            android:textSize="@dimen/operation_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonSubtract"
            android:onClick="onClickOperation"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="1"
            android:textSize="@dimen/number_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonOne"
            android:onClick="onClickDigit"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="2"
            android:textSize="@dimen/number_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonTwo"
            android:onClick="onClickDigit"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="3"
            android:textSize="@dimen/number_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonThree"
            android:onClick="onClickDigit"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="+"
            android:textSize="@dimen/operation_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonAdd"
            android:onClick="onClickOperation"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="0"
            android:textSize="@dimen/number_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonZero"
            android:onClick="onClickDigit"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="00"
            android:textSize="@dimen/number_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonDouble_zero"
            android:onClick="onClickDigit"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="."
            android:textSize="@dimen/operation_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonDecimal"
            android:onClick="onClickDigit"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="="
            android:textSize="@dimen/operation_size"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:id="@+id/buttonEvaluate"
            android:onClick="onClickOperation"/>
    </LinearLayout>
</LinearLayout>
